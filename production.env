# Production Environment Configuration
# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dofamine_prod
DB_USER=dofamine_user
DB_PASSWORD=YourStrongProductionPassword123!
DB_HOST=localhost
DB_PORT=5432

# Django Settings
SECRET_KEY=your-super-secret-production-key-change-this-immediately
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,IP_ADDRESS

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# File Storage
MEDIA_ROOT=/var/www/dofamine/media/
STATIC_ROOT=/var/www/dofamine/static/

# Logging
LOG_LEVEL=INFO

# Twilio Configuration (SMS Authentication)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# OpenAI Configuration (Chat AI)
OPENAI_API_KEY=your_openai_api_key

# Firebase Configuration (DISABLED - using Twilio instead)
# FIREBASE_CREDENTIALS=

# Production specific
DJANGO_ENV=production
